<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="row">
      <center><div class=".col-md-12">
        <div class="profile_userpic">
        <% if current_user.avatar.exists? %>
          <%= image_tag current_user.avatar.url, size: "128",:class=>"rounded"%>
        <% else %>
          <%= image_tag "default.png", size: "128",:class=>"profile_userpic"%>
        <% end %>
      </div>
    </div></center>
    </div>
    <hr>
    <div class="row">
      <div class="form-group">
        <div class="col-md-6">
          </br>
          <label for="Firstname">First Name</label>
          <%= f.text_field :name, autofocus: true , class: 'form-control',placeholder:"Name", autofocus:""%>
        </div>
        <div class="col-md-6">
          </br>
          <label for=Lastname>Last Name</label>
          <%= f.text_field :last_name, autofocus: true , class: 'form-control',placeholder:"Lastname", autofocus:""%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-6">
          </br>
          <label for="Firstname">E-mail</label>
          <%= f.email_field :email, autofocus: true , class: 'form-control',placeholder:"Email", autofocus:""%>
        </div>
        <div class="col-md-6">
          </br>
          <label for=Lastname>Avatar</label>
          <%= f.file_field :avatar, autofocus: true , class: 'form-control',placeholder:"Avatar", autofocus:""%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-6">
          </br>
          <label for="Firstname">Cellphone</label>
          <%= f.telephone_field :cellphone, autofocus: true , class: 'form-control',placeholder:"Cellphone", autofocus:""%>
        </div>
        <div class="col-md-6">
          </br>
          <label for=Lastname>Site</label>
          <%= f.collection_select(:site, Site.all, :id, :name , {},{:class=>'form-control'}) %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-4">
          </br>
          <label for="Firstname">Password</label>
          <%= f.password_field :password, autocomplete: "off" , class: 'form-control',placeholder:"Password"%>
        </div>
        <div class="col-md-4">
          </br>
          <label for=Lastname>Password Confirmation</label>
          <%= f.password_field :password_confirmation,  autocomplete: "off", class: 'form-control',placeholder:"Password Confirmation"%>
        </div>
        <div class="col-md-4">
          </br>
          <label for=Lastname>Current Password</label>
          <%= f.password_field :current_password, autocomplete: "off" , class: 'form-control',placeholder:"Current Password"%>
        </div>
      </div>
    </div>
    </br>
    <div class="row">
      <div class="form-group">
        <div class="col-md-12">
          <%= f.submit "Update", :class => 'btn btn-primary btn-block btn-block-signup' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
