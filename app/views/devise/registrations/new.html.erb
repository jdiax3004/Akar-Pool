<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">
		<div class="login-panel panel panel-default">
			<div class="panel-heading">Sign Up</div>
			<div class="panel-body">
				<%= render 'layouts/messages' %>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>
				<div class="row">
					<div class="form-group">
						<div class="col-md-6">
							<label for="Firstname">First name</label>
							<%= f.text_field :name, autofocus: true , class: 'form-control',placeholder:"Name", autofocus:""%>
						</div>
						<div class="col-md-6">
							<label for=Lastname>Last name</label>
							<%= f.text_field :last_name, autofocus: true , class: 'form-control',placeholder:"Lastname", autofocus:""%>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<div class="col-md-12">
							<label for="email">Email</label>
							<%= f.email_field :email, autofocus: true , class: 'form-control',placeholder:"Email"%>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<div class="col-md-6">
							<label for="Firstname">Cellphone</label>
							<%= f.telephone_field :cellphone, autofocus: true , class: 'form-control',placeholder:"Cellphone"%>
						</div>
						<div class="col-md-6">
							<label for="Firstname">Site</label>
							<%= f.collection_select(:site, Site.all, :id, :name , {},{:class=>'form-control'}) %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<div class="col-md-6">
							<%= f.label :password %>
    					<% if @minimum_password_length %>
    						<em>(<%= @minimum_password_length %> characters minimum)</em>
    					<% end %><br />
    					<%= f.password_field :password, placeholder:"Password", autocomplete: "off", class: 'form-control' %>
						</div>
						<div class="col-md-6">
							<%= f.label :password_confirmation %><br />
    					<%= f.password_field :password_confirmation, placeholder:"Password Confirmation", autocomplete: "off", class: 'form-control' %>
						</div>
					</div>
				</div>

				<br/>
				<div class="row">
					<div class="form-group">
						<div class="col-md-12">
							<%= f.submit "Sign Up", :class => 'btn btn-primary btn-block' %>
						</div>
					</div>
				</div>
				<% end %>
				<br/>
				<div class="row">
					<div class="col-md-12">
						Back to <%= render "devise/shared/links" %>
					</div>
				</div>
			</div>

		</div>
	</div><!-- /.col-->
</div><!-- /.row -->
