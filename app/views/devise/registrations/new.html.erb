<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">
		<div class="login-panel panel panel-default">
			<div class="panel-heading"><b>Sign Up <i class="fa fa-pencil" aria-hidden="true"></i></b></div>
			<div class="panel-body">
				<%= render 'layouts/messages' %>
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>
				<div class="row">
					<div class="form-group">
						<div class="col-md-6">
						</br>
						<label for="Firstname">First Name</label>
						<%= f.text_field :name, autofocus: true , class: 'form-control',placeholder:"Name", autofocus:""%>
					</div>
					<div class="col-md-6">
					</br>
					<label for=Lastname>Last Name</label>
					<%= f.text_field :last_name, autofocus: true , class: 'form-control',placeholder:"Lastname", autofocus:""%>
				</br>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="form-group">
			<div class="col-md-12">
				<label for="email">E-mail</label>
				<%= f.email_field :email, autofocus: true , class: 'form-control',placeholder:"E-mail"%>
			</div>
		</div>
	</div>
</br>
<div class="row">
	<div class="form-group">
		<div class="col-md-6">

			<label for="Firstname">Cellphone</label>
			<%= f.telephone_field :cellphone, autofocus: true , class: 'form-control',placeholder:"Cellphone"%>
		</br>
	</div>

	<div class="col-md-6">

		<label for="Firstname">Site</label>
		<%= f.collection_select(:site, Site.all, :id, :name , {},{:class=>'form-control'}) %>
	</div>
</div>
</div>
<div class="row">
	<div class="form-group">
		<div class="col-md-6">
			<%= f.label :password %>
			<%= f.password_field :password, placeholder:"Password", autocomplete: "off", class: 'form-control' %>
		</div>

		<div class="col-md-6">
			<%= f.label :Confirmation %>
			<%= f.password_field :password_confirmation, placeholder:"Password Confirmation", autocomplete: "off", class: 'form-control' %>
		</div>
	</div>
</div>
</br>
<div class="row">
	<div class="form-group">
		<div class="col-md-12">
			<%= f.submit "Sign Up", :class => 'btn btn-primary btn-block btn-block-signup' %>
		</div>
	</div>
</div>
<% end %>
<br/>
<div class="row">

</div>
</div>

</div>
<div class="col-md-12">
	<center>Back to <%= render "devise/shared/links" %></center>
</div>
</div><!-- /.col-->
</div><!-- /.row -->
